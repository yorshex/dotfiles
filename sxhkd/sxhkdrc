# sxhkdrc

# open web
super+w
	firefox

# take a screenshot
Print
	flameshot gui

# open emoji menu
super+grave
	bemoji -n

# open password manager
super+p
	dmenu_pass

# open volume control
super+v
	pavucontrol

# open sound effects control
super+e
	easyeffects

# open boomer
super+b
	boomer -c ~/.config/boomer/config

# lock screen
super+shift+l
	slock

# volume {up,down}
super+{minus,equal} 
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}5% && pkill -SIGRTMIN+1 dwmblocks

# mute sound
super+BackSpace
	pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -SIGRTMIN+1 dwmblocks

# ncmpcpp
super+n
	st -n ncmpcpp ncmpcpp

# mpc
super+{apostrophe,bracketleft,bracketright}
	mpc {toggle,prev,next} && pkill -SIGRTMIN+2 dwmblocks
