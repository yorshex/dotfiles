#!/bin/sh

autorun() {
	pgrep -x "$1" > /dev/null || "$@" &
}

start_dwm() {
	autorun dwmblocks
	export _JAVA_AWT_WM_NONREPARENTING=1
	while :; do
		ssh-agent dwm || break
	done
}

start_bspwm() {
	bspwm
}

[ -f ~/.fehbg ] && ~/.fehbg || hsetroot -solid "#21252b" &
autorun easyeffects --gapplication-service
autorun xcompmgr
autorun dunst
autorun flameshot
autorun xautolock -time 10 -locker slock
autorun otd-daemon
autorun pcmanfm -d

start_bspwm
